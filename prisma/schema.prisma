generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TaskColor {
  RED
  ORANGE
  YELLOW
  GREEN
  BLUE
  PURPLE
  PINK
  BROWN
}

model Task {
  id        Int      @id @default(autoincrement())  
  title     String   
  color     TaskColor
  completed Boolean  @default(false)                
  createdAt DateTime @default(now())                
  updatedAt DateTime @updatedAt                     
}